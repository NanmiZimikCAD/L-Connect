<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>L-Connect - Logistics Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            @* <a asp-controller="Home" asp-action="Index" class="navbar-brand fw-bold fs-4">L-Connect</a> *@
            <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
                <div class="logo-circle me-2">
                    <img src="~/images/L-Connect-logo3.png" alt="L-Connect Logo" class="logo-img">
                </div>
                <span class="fw-bold fs-4">L-Connect</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="QuoteRequest" asp-action="Create">REQUEST QUOTE</a></li>
                    <li class="nav-item">
                    <a class="nav-link" asp-controller="Services" asp-action="Index">SERVICES</a>
                </li>
                    <li class="nav-item"><a class="nav-link">BECOME A CLIENT</a></li>
                    <li class="nav-item"><a class="nav-link">ABOUT US</a></li>
                    <li class="nav-item">
                        
                        <a class="nav-link" asp-controller="Home" asp-action="Support">SUPPORT</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="FAQ" >FAQ</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="btn nav-link" asp-controller="Account" asp-action="Login">Login/Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<!-- Footer -->
<footer class="py-5" style="background-color: #2a2391; color: white;">
    <div class="container">
        <div class="row g-4">
            <!-- Company Info Column -->
            <div class="col-lg-3 col-md-6">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
                    <div class="logo-circle me-2">
                        <img src="~/images/L-Connect-logo3.png" alt="L-Connect Logo" class="logo-img">
                    </div>
                    <span class="fw-bold fs-4">L-Connect</span>
                </a>
                <p class="mb-4">
                    Bridging the gap between manual processes and enterprise logistics solutions.
                </p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-light" aria-label="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="LinkedIn">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>

            <!-- Services Column -->
            <div class="col-lg-3 col-md-6">
                <h5 class="mb-4">Services</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Shipping</a></li>
                    <li class="mb-2"><a asp-controller="Tracking" asp-action="Index" class="text-light text-decoration-none">Tracking</a></li>
                    <li class="mb-2"><a asp-controller="QuoteRequest" asp-action="Create" class="text-light text-decoration-none">Quote Requests</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Document Management</a></li>
                </ul>
            </div>

            <!-- Company Column -->
            <div class="col-lg-3 col-md-6">
                <h5 class="mb-4">Company</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a asp-controller="Home" asp-action="AboutUs" class="text-light text-decoration-none">About Us</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="FAQ" class="text-light text-decoration-none">FAQ</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Support" class="text-light text-decoration-none">Support</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Careers</a></li>
                </ul>
            </div>

            <!-- Legal Column -->
            <div class="col-lg-3 col-md-6">
                <h5 class="mb-4">Legal</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a asp-controller="Home" asp-action="Terms" class="text-light text-decoration-none">Terms & Conditions</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Shipping Policy</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Cookie Policy</a></li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-top border-white border-opacity-25 mt-4 pt-4 text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year L-Connect. All rights reserved.</p>
        </div>
    </div>
</footer>
</html>