@model L_Connect.Models.ViewModels.AboutUs.AboutUsModel

@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-4">
    <h2 class="mb-4">About Us</h2>

    <!-- Company Profile Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Company Profile
        </div>
        <div class="card-body">
            <p>
                L-Connect is a leading provider of logistics and shipping solutions. We specialize in 
                real-time tracking and seamless customer experience.
            </p>
        </div>
    </div>

    <!-- Coverage Map Section -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            Coverage Map
        </div>
        <div class="card-body">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4139.566155535425!2d-80.25781904722034!3d43.530308334068884!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b9acc576c0b5d%3A0x66fc2db22619df19!2sOld%20University%2C%20Guelph%2C%20ON!5e0!3m2!1sen!2sca!4v1741753220364!5m2!1sen!2sca" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <!-- Achievements Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            Achievements
        </div>
        <div class="card-body">
            <ul>
                <li>Rated Best Logistics Provider - 2024</li>
                <li>98% On-Time Delivery Rate</li>
                <li>ISO Certified for Secure Shipments</li>
            </ul>
        </div>
    </div>

    <!-- Partners Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            Partners
        </div>
        <div class="card-body">
            <ul>
                <li>FedEx</li>
                <li>UPS</li>
                <li>DHL</li>
                <li>Amazon</li>
            </ul>
        </div>
    </div>
</div>
