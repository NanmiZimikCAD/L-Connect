@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Background Image -->
<section class="hero-section position-relative text-white d-flex align-items-center">
    <div class="hero-image-overlay"></div>
    <div class="container py-5 position-relative">
        <div class="row">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-4">Streamlined Logistics for Small Businesses</h1>
                <p class="lead mb-5">Track, manage, and deliver with confidence. L-Connect bridges the gap between manual processes and enterprise solutions.</p>
                <div class="bg-white p-4 rounded shadow">
                    <h2 class="text-dark h5 mb-3">Track Your Shipment</h2>
                    <form asp-controller="Tracking" asp-action="Index" method="post">
                        <div class="input-group">
                            <input type="text" name="TrackingNumber" class="form-control form-control-lg" placeholder="Enter tracking number" required>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Track
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How L-Connect Works Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">How L-Connect Works</h2>
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-search fa-2x text-primary"></i>
                </div>
                <h3 class="h4 mb-3">Track Without Account</h3>
                <p class="mb-3">Don't have an account? Simply enter your tracking number to get detailed shipment information.</p>
                <a href="@Url.Action("Index", "Tracking")" class="text-primary fw-bold">Track Now <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-user-plus fa-2x text-primary"></i>
                </div>
                <h3 class="h4 mb-3">Become a Client</h3>
                <p class="mb-3">Register for an account to gain access to enhanced features like shipment history and document management.</p>
                <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">Register <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-folder-open fa-2x text-primary"></i>
                </div>
                <h3 class="h4 mb-3">Client Dashboard</h3>
                <p class="mb-3">Access all your shipments, track status updates, view estimated delivery times, and manage shipping documents.</p>
                <a href="@Url.Action("Login", "Account")" class="text-primary fw-bold">Sign In <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>
</section>

