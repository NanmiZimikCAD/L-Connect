<div class="hero-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="tracking-box bg-white p-4 rounded shadow">
                    <h2 class="text-center mb-4">Track Your Shipment</h2>
                    <form asp-controller="Tracking" asp-action="Index" method="post">
                        <div class="input-group">
                            <input type="text" name="TrackingNumber" class="form-control form-control-lg" placeholder="Enter tracking number" required>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Track
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card text-center p-4 bg-white rounded shadow-sm">
                <h3 class="mb-3">Request Quote</h3>
                <p class="text-muted">Get instant shipping quotes</p>
                <a asp-controller="QuoteRequest" asp-action="Create" class="btn btn-primary">Get Quote</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4 bg-white rounded shadow-sm">
                <h3 class="mb-3">Client Portal</h3>
                <p class="text-muted">Manage your shipments</p>
                <button class="btn btn-primary">Learn More</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4 bg-white rounded shadow-sm">
                <h3 class="mb-3">Document Center</h3>
                <p class="text-muted">Access shipping documents</p>
                <button class="btn btn-primary">Access Docs</button>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="contact-section bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-3">Need Assistance?</h2>
        <p class="text-muted mb-4">Contact our support team</p>
        <div class="bg-white d-inline-block p-4 rounded shadow-sm">
            <h3 class="text-primary mb-3">1-800-LCONNECT</h3>
            <button class="btn btn-primary btn-lg">Contact Us</button>
        </div>
    </div>
</div>