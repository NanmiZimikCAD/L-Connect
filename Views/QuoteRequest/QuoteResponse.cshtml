@model L_Connect.Models.ViewModels.Quote.QuoteResponseViewModel

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4 text-primary">Quote Summary</h2>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Source:</strong> @Model.Source</p>
                    <p><strong>Destination:</strong> @Model.Destination</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Weight:</strong> @Model.Weight.ToString("N2") kg</p>
                    <p><strong>Base Price Per Kg:</strong> $@Model.BasePricePerKg.ToString("N2")</p>
                    <p><strong>Distance:</strong> @Model.Distance.ToString("N2") km</p>
                    @if (Model.Discount.HasValue)
                    {
                        <p><strong>Discount:</strong> @Model.Discount% (Bulk Order)</p>
                    }
                    <p><strong>Estimated Price:</strong> <span class="text-success">$@Model.EstimatedPrice.ToString("N2")</span></p>
                </div>
            </div>

            <hr />

            <div class="text-center mt-4">
                <a asp-action="Create" class="btn btn-primary me-2">
                    Request Another Quote
                </a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
