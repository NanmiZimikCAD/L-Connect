@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <div class="row g-4">
        <!-- New Shipment -->
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>New Shipment</h3>
                        <p class="text-muted mb-0">Create and track new shipments</p>
                    </div>
                    <a href="#" class="btn btn-primary">Create New</a>
                </div>
            </div>
        </div>

        <!-- Shipments List -->
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>Shipments List</h3>
                        <p class="text-muted mb-0">Manage existing shipments</p>
                    </div>
                    <a href="#" class="btn btn-primary">View All</a>
                </div>
            </div>
        </div>

        <!-- System Controls -->
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>System Controls</h3>
                        <p class="text-muted mb-0">Manage users and settings</p>
                    </div>
                    <a href="#" class="btn btn-primary">Admin</a>
                </div>
            </div>
        </div>

        <!-- Recent Shipments -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3>Recent Shipments</h3>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>CLIENT</th>
                                    <th>STATUS</th>
                                    <th>ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>SHP001</td>
                                    <td>Acme Corp</td>
                                    <td>In Transit</td>
                                    <td>
                                        <a href="#" class="text-primary">View</a> |
                                        <a href="#" class="text-primary">Update</a> |
                                        <a href="#" class="text-primary">Documents</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>SHP002</td>
                                    <td>Tech Inc</td>
                                    <td>Pending</td>
                                    <td>
                                        <a href="#" class="text-primary">View</a> |
                                        <a href="#" class="text-primary">Update</a> |
                                        <a href="#" class="text-primary">Documents</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Controls -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3>Admin Controls</h3>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-people"></i> User Management
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-file-text"></i> Generate Reports
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-graph-up"></i> View Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3>System Status</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="mb-1">Active Users</p>
                            <h4>24</h4>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-1">Pending Approvals</p>
                            <h4>7</h4>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-1">System Status</p>
                            <span class="badge bg-success">Operational</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>