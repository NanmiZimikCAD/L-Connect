@model L_Connect.Models.ViewModels.Shipments.ShipmentEditViewModel

@{
    ViewData["Title"] = "Edit Shipment";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Edit Shipment</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/Admin/UpdateShipment">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ShipmentId" value="@Model.ShipmentId" />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="TrackingNumber">Tracking Number</label>
                                    <input type="text" id="TrackingNumber" name="TrackingNumber" value="@Model.TrackingNumber" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ClientName">Client</label>
                                    <input type="text" id="ClientName" name="ClientName" value="@Model.ClientName" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Weight">Weight (kg)</label>
                                    <input type="number" step="0.01" id="Weight" name="Weight" value="@Model.Weight" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ServiceType">Service Type</label>
                                    <select id="ServiceType" name="ServiceType" class="form-control" required>
                                        @foreach (var option in Model.ServiceTypeOptions)
                                        {
                                            if (option.Value == Model.ServiceType)
                                            {
                                                <option value="@option.Value" selected>@option.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="OriginAddress">Origin Address</label>
                                    <textarea id="OriginAddress" name="OriginAddress" class="form-control" rows="3" required>@Model.OriginAddress</textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DestinationAddress">Destination Address</label>
                                    <textarea id="DestinationAddress" name="DestinationAddress" class="form-control" rows="3" required>@Model.DestinationAddress</textarea>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="CurrentStatus">Current Status</label>
                                    <select id="CurrentStatus" name="CurrentStatus" class="form-control" required>
                                        @foreach (var option in Model.StatusOptions)
                                        {
                                            if (option.Value == Model.CurrentStatus)
                                            {
                                                <option value="@option.Value" selected>@option.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="CurrentLocation">Current Location</label>
                                    <input type="text" id="CurrentLocation" name="CurrentLocation" value="@Model.CurrentLocation" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="EstimatedDeliveryDate">Estimated Delivery Date</label>
                                    <input type="date" id="EstimatedDeliveryDate" name="EstimatedDeliveryDate" value="@(Model.EstimatedDeliveryDate?.ToString("yyyy-MM-dd"))" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="FinalCost">Final Cost</label>
                                    <input type="number" step="0.01" id="FinalCost" name="FinalCost" value="@Model.FinalCost" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/Admin/Dashboard" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}