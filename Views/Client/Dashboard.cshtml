<h3>Active Shipments</h3>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Tracking Number</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shipment in Model.ActiveShipments)
            {
                <tr>
                    <td>@shipment.TrackingNumber</td>
                    <td>@shipment.CurrentStatus</td>
                    <td>
                        <a asp-controller="Tracking" 
                           asp-action="Result" 
                           asp-route-trackingNumber="@shipment.TrackingNumber" 
                           class="btn btn-sm btn-primary">
                            Track
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>