@{
    ViewData["Title"] = "Client Dashboard";
    Layout = "_ClientLayout"; 
}

<div class="container-fluid p-4">
    <!-- Shipments Dashboard -->
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title mb-4">Shipments Dashboard</h2>

            <!-- Active Shipments -->
            <div class="mb-4">
                <h3 class="h5 text-dark">Active Shipments</h3>
                <div class="list-group">
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>SHP001</strong>
                                <span class="text-muted ms-3">New York</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completed Shipments -->
            <div class="mb-4">
                <h3 class="h5 text-dark">Completed Shipments</h3>
                <a href="#" class="text-primary">View history</a>
            </div>

            <!-- Pending Shipments -->
            <div class="mb-4">
                <h3 class="h5 text-dark">Pending Shipments</h3>
                <div class="list-group">
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>SHP002</strong>
                                <span class="text-muted ms-3">Los Angeles</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row g-3">
                <div class="col-12">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-clock-history"></i> Complete Status History
                    </button>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-map"></i> Transit Points Map
                    </button>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-calendar"></i> Estimated Delivery
                    </button>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-file-text"></i> Access Shipping Docs
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Quick Actions</h2>
            <div class="row g-3">
                <div class="col-12">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> Request New Quote
                    </button>
                </div>
                <div class="col-12 text-center">
                    <a href="#" class="text-primary">Need assistance?</a>
                </div>
            </div>
        </div>
    </div>
</div>